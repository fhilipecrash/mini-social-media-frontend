{
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "always",
  "vueIndentScriptAndStyle": true,
  "endOfLine": "lf",
  "useTabs": false,
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx", "**/*.json"],
      "options": {
        "tabWidth": 2,
        "semi": false
      }
    }
  ]
}
